<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
 <!--   android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.szpon.pokerchips.MainActivity" -->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="POT: 666"
            android:id="@+id/MainPotID"
            android:textAlignment="center"
            android:textSize="15dp"
            android:paddingTop="15dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buton"
        android:text="ADD"
        android:onClick="plus"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B_addPlayerID"
        android:text="Add Player"
        android:onClick="plus2"
        android:elevation="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B_refreshID"
        android:text="REFRESH"
        android:onClick="refresh"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finishbuton"
        android:text="Next Hand"
        android:onClick="finish"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/historyhands"
        android:text="history"
        android:onClick="history"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/nameID"
            android:text="Name"
            android:textAlignment="center"
            android:textSize="15dp" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/stackID"
            android:text="Stack"
            android:textAlignment="center"
            android:textSize="15dp" />
        <TextView

            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/a1_preflopID"
            android:maxLines="1"
            android:text="PreFLop"
            android:textAlignment="center"
            android:textSize="15dp"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:inputType="numberDecimal"
            android:singleLine="true" />
        <TextView
            android:text="Flop"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/a2_flopID"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="15dp" />
        <TextView
            android:text="Turn"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/turnID"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="15dp" />
        <TextView
            android:text="River"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/riverID"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
        android:text="Winner"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/eins"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:textAlignment="center"
        android:textSize="15dp" /> />
        />


    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>